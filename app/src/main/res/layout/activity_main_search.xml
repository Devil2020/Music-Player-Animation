<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    tools:context=".screens.MainActivity">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        android:id="@+id/guidlineCenter"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"
        android:id="@+id/guidlineTop"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"
        android:id="@+id/guidlineBottom"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.18"
        android:id="@+id/guidlineLeft"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.81"
        android:id="@+id/guidlineRight"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"
        android:id="@+id/musicGraphicUp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        android:id="@+id/musicGraphicDown"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85"
        android:id="@+id/musicRecyclerDown"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guidlineCenter"
        android:id="@+id/imageUp"
        android:visibility="invisible"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relatUp">
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:elevation="25dp"
                android:visibility="visible"
                app:chipBackgroundColor="#123"
                app:chipIconVisible="true"
                app:chipIconEnabled="true"
                app:chipIcon="@drawable/ic_cele"
                android:textAppearance="@style/BigFont"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="25dp"
                app:chipStartPadding="10dp"
                app:chipEndPadding="10dp"
                android:id="@+id/newChip"
                />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipBackgroundColor="#FF554E"
                android:visibility="visible"
                app:chipIconVisible="true"
                app:chipIconEnabled="true"
                app:chipIcon="@drawable/ic_head"
                android:text="Solange"
                android:textColor="@android:color/white"
                android:layout_below="@id/newChip"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:elevation="20dp"
                android:textAppearance="@style/BigFont"
                android:textStyle="bold"
                app:chipStartPadding="10dp"
                app:chipEndPadding="10dp"
                android:id="@+id/solangeChip"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/m_up"
                android:id="@+id/milyeUp"
                android:visibility="visible"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/orange_rounded_up"
                android:id="@+id/topColor"
                />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guidlineCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/imageDown"
        android:visibility="invisible"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/m_down"
                android:id="@+id/milyeDown"
                android:visibility="visible"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/orange_rounded_down"
                android:id="@+id/bottomColor"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:id="@+id/infoAnimation"
                android:visibility="visible"
                >
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/stick"
                    android:scaleType="fitXY"

                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/stickImage"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="'' Wreaking Ball ''"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:fontFamily="casual"
                    android:textStyle="bold"
                    android:layout_below="@id/stickImage"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/songName"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by : Miley Cyrus"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="casual"
                    android:textStyle="normal"
                    android:layout_below="@id/songName"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/singerName"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="January 30 2020"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="casual"
                    android:textStyle="normal"
                    android:layout_below="@id/singerName"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/date"
                    />
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="2dp"
                    android:layout_below="@id/date"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/stick"
                    android:scaleType="fitXY"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/stickImageDown"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_menu"
        android:id="@+id/menuButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_filter_list_black_24dp"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:id="@+id/searchScreen"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/top_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/backButton"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:layout_centerInParent="true"

            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wralking Balls"
        android:textSize="35sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30sp"
        android:textColor="#000"
        android:id="@+id/musicName"
        />
    <com.google.android.material.chip.Chip
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/musicName"
        android:visibility="invisible"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:text="00:00"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:id="@+id/durationChip"
        />
    <com.gauravk.audiovisualizer.visualizer.CircleLineVisualizer
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/musicGraphicUp"
        app:layout_constraintBottom_toTopOf="@id/musicGraphicDown"
        custom:layout_constraintRight_toLeftOf="parent"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/blast"
        android:visibility="invisible"
        custom:avDensity="0.8"
        custom:avType="fill"
        custom:avColor="@color/colorPrimary"
        custom:avSpeed="normal"
        custom:avWidth="100dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/musicGraphicDown"
        app:layout_constraintBottom_toTopOf="@id/musicRecyclerDown"

        android:id="@+id/musicRecyclerView"
        android:visibility="invisible"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginRight="35dp"
        app:backgroundTint="#fff"
        android:id="@+id/playMusic"
        android:src="@drawable/ic_search_black_24dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/playMusic"
        app:backgroundTint="#fff"
        android:id="@+id/shuffleMusic"
        android:src="@drawable/ic_shuffle_black_24dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/shuffleMusic"
        android:layout_marginLeft="30dp"
        app:backgroundTint="#fff"
        android:id="@+id/loopMusic"
        android:src="@drawable/ic_loop_black_24dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>